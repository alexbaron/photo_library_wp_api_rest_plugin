<?xml version="1.0"?>
<ruleset name="PhotoLibrary WordPress Coding Standards">
    <description>Coding standards for PhotoLibrary WordPress plugin</description>

    <!-- Include the WordPress-Extra standard -->
    <rule ref="WordPress-Extra">
        <!-- Exclude specific rules that may be too strict for this project -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
        <exclude name="Generic.Commenting.DocComment.MissingShort"/>
        <exclude name="Squiz.Commenting.FunctionComment.Missing"/>
        <exclude name="Squiz.Commenting.ClassComment.Missing"/>
        <exclude name="Squiz.Commenting.VariableComment.Missing"/>
        <exclude name="WordPress.NamingConventions.ValidVariableName.UsedPropertyNotSnakeCase"/>
    </rule>

    <!-- Include the WordPress-Docs standard for better documentation -->
    <rule ref="WordPress-Docs"/>

    <!-- Specify the minimum PHP version -->
    <config name="minimum_supported_wp_version" value="5.0"/>
    <config name="testVersion" value="7.4-"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Show progress and use colors -->
    <arg name="colors"/>
    <arg value="p"/>

    <!-- Check these directories and files -->
    <file>./src/</file>
    <file>./photo_library_rest_api.php</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>./vendor/</exclude-pattern>
    <exclude-pattern>./node_modules/</exclude-pattern>

    <!-- Set the text domain -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array" value="photo_library_rest_api"/>
        </properties>
    </rule>

    <!-- Verify that the text_domain is set to the expected value -->
    <rule ref="WordPress.WP.I18n.MissingTextDomain">
        <type>error</type>
    </rule>
    <rule ref="WordPress.WP.I18n.WrongDomainInGettextCall">
        <type>error</type>
    </rule>
    <rule ref="WordPress.WP.I18n.WrongDomainInFunctionCall">
        <type>error</type>
    </rule>
</ruleset>
